<body>
    <div class="container mt-5">
        <h1 class="text-center text-white mb-4">Resume Builder</h1>
        
        <div class="row">
            <div class="col-lg-6 col-md-12 mb-4">
                <div class="card p-4">
                    <form id="resumeForm">
                        <label>Name</label>
                        <input type="text" id="name" class="form-control">
                        
                        <label class="mt-3">Email</label>
                        <input type="email" id="email" class="form-control">
                        
                        <label class="mt-3">Phone</label>
                        <input type="tel" id="phone" class="form-control">
                        
                        <label class="mt-3">Profile Summary</label>
                        <textarea id="summary" class="form-control" rows="3"></textarea>
                        
                        <label class="mt-3">Education</label>
                        <div id="educationlist"></div>
                        <button type="button" class="btn btn-primary btn-sm mt-2" onclick="addEducation()">+ Add Education</button>
                        
                        <label class="mt-3">Experience</label>
                        <div id="experiencelist"></div>
                        <button type="button" class="btn btn-primary btn-sm mt-2" onclick="addExperience()">+ Add Experience</button>
                        
                        <button type="button" class="btn btn-danger mt-4 w-100" onclick="clearForm()">Clear Form</button>
                    </form>
                </div>
            </div>
            
            <div class="col-lg-6 col-md-12">
                <div class="card p-4" id="preview">
                    <h2 class="text-center text-primary mb-3">Resume Preview</h2>
                    <hr>
                    
                    <div class="preview-section">
                        <h3 id="previewName">Your Name</h3>
                        <p id="previewEmail">email@example.com</p>
                        <p id="previewPhone">+91 1234567890</p>
                    </div>
                    
                    <div class="preview-section">
                        <h5 class="section-title">Profile Summary</h5>
                        <p id="previewSummary">Your profile summary will appear here...</p>
                    </div>
                    
                    <div class="preview-section">
                        <h5 class="section-title">Education</h5>
                        <div id="previewEducation">No education added yet</div>
                    </div>
                    
                    <div class="preview-section">
                        <h5 class="section-title">Experience</h5>
                        <div id="previewExperience">No experience added yet</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function updatePreview() {
            const name = document.getElementById('name').value || 'Your Name';
            const email = document.getElementById('email').value || 'email@example.com';
            const phone = document.getElementById('phone').value || '+91 1234567890';
            const summary = document.getElementById('summary').value || 'Your profile summary will appear here...';
            
            document.getElementById('previewName').textContent = name;
            document.getElementById('previewEmail').textContent = email;
            document.getElementById('previewPhone').textContent = phone;
            document.getElementById('previewSummary').textContent = summary;
            
            updateEducationPreview();
            updateExperiencePreview();
        }

        function updateEducationPreview() {
            const institutions = document.querySelectorAll('input[name="institution"]');
            const degrees = document.querySelectorAll('input[name="degree"]');
            const years = document.querySelectorAll('input[name="year"]');
            
            let html = '';
            for (let i = 0; i < institutions.length; i++) {
                const inst = institutions[i].value || 'Institution';
                const deg = degrees[i].value || 'Degree';
                const yr = years[i].value || 'Year';
                html += '<div class="education-item"><strong>' + deg + '</strong><br>' + inst + ' | ' + yr + '</div>';
            }
            
            document.getElementById('previewEducation').innerHTML = html || 'No education added yet';
        }

        function updateExperiencePreview() {
            const companies = document.querySelectorAll('input[name="company"]');
            const roles = document.querySelectorAll('input[name="role"]');
            const durations = document.querySelectorAll('input[name="duration"]');
            
            let html = '';
            for (let i = 0; i < companies.length; i++) {
                const comp = companies[i].value || 'Company';
                const role = roles[i].value || 'Role';
                const dur = durations[i].value || 'Duration';
                html += '<div class="experience-item"><strong>' + role + '</strong><br>' + comp + ' | ' + dur + '</div>';
            }
            
            document.getElementById('previewExperience').innerHTML = html || 'No experience added yet';
        }

        function addEducation() {
            const div = document.createElement('div');
            div.className = 'dynamic-section';
            div.innerHTML = '<input type="text" name="institution" class="form-control mb-2" placeholder="Institution" oninput="updatePreview()"><input type="text" name="degree" class="form-control mb-2" placeholder="Degree" oninput="updatePreview()"><input type="text" name="year" class="form-control mb-2" placeholder="Year" oninput="updatePreview()"><button type="button" class="btn btn-danger btn-sm" onclick="removeItem(this)">Remove</button>';
            document.getElementById('educationlist').appendChild(div);
            updatePreview();
        }

        function addExperience() {
            const div = document.createElement('div');
            div.className = 'dynamic-section';
            div.innerHTML = '<input type="text" name="company" class="form-control mb-2" placeholder="Company" oninput="updatePreview()"><input type="text" name="role" class="form-control mb-2" placeholder="Role" oninput="updatePreview()"><input type="text" name="duration" class="form-control mb-2" placeholder="Duration" oninput="updatePreview()"><button type="button" class="btn btn-danger btn-sm" onclick="removeItem(this)">Remove</button>';
            document.getElementById('experiencelist').appendChild(div);
            updatePreview();
        }

        function removeItem(button) {
            button.parentNode.remove();
            updatePreview();
        }

        function clearForm() {
            document.getElementById('resumeForm').reset();
            document.getElementById('educationlist').innerHTML = '';
            document.getElementById('experiencelist').innerHTML = '';
            updatePreview();
        }

        document.getElementById('name').addEventListener('input', updatePreview);
        document.getElementById('email').addEventListener('input', updatePreview);
        document.getElementById('phone').addEventListener('input', updatePreview);
        document.getElementById('summary').addEventListener('input', updatePreview);
        
        updatePreview();
    </script>
</body>
</html>

